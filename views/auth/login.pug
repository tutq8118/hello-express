extend ../layout/default

block body
  .row
    .col-6
      h2.mb-3 Register
      p.mb-3 If you don't have any account, create one
      if(status === 'overLetter')
        .alert.alert-danger(role='alert')
          | The user name length must be not greater than 30 letters
      form(method='POST' action='/auth/create')
        .form-group
          label Name      
          input.form-control(type='text' name='name')
        .form-group
          label Email*      
          input.form-control(type='text' name='email' required="required" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$" title="Must contain '@' and at least 2 letters")
        .form-group
          label Password*      
          input.form-control(type='password' name='pwd' required="required" autocomplete="new-password" pattern=".{6,}" title="Must contain 6 or more characters")
        .form-group.text-right
          button.btn.btn-primary Create
    .col-6
      h2.mb-3 Login
      p.mb-3 If you had an account, just login
      if errors
        each error in errors
          .alert.alert-danger(role='alert')= error
      form.mb-5(method='POST' action='/auth/login')
        .form-group
          label Email*      
          input.form-control(type='text' name='email' required="required")
        .form-group
          label Password*      
          input.form-control(type='password' name='password' required="required")
        .form-group.text-right
          button.btn.btn-primary Login
